# Express Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Razorpay Configuration
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_HERE
RAZORPAY_KEY_SECRET=your_secret_key_here

# WhatsApp Business API Configuration
# Get these from: https://developers.facebook.com/
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# Database Configuration
# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/cafe_management
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/cafe_management
MONGODB_URI=mongodb://localhost:27017/cafe_management
