# ============================================
# CAFE MANAGEMENT SYSTEM - FEATURE FLAGS
# ============================================
# Copy this file to .env.local and customize for your deployment

# ============================================
# Branch Management
# ============================================
# Enable single-branch mode (hides branch selector, assumes one cafe)
VITE_SINGLE_BRANCH_MODE=false

# ============================================
# Real-time Features
# ============================================
# Enable Socket.IO real-time updates
VITE_ENABLE_REAL_TIME=true

# Throttle interval for real-time stats updates (milliseconds)
# Default: 7000 (7 seconds)
VITE_REAL_TIME_THROTTLE_MS=7000

# ============================================
# Analytics Pages
# ============================================
# Enable Stats page (real-time analytics dashboard)
VITE_ENABLE_STATS_PAGE=true

# Enable Reports page (historical analytics and trends)
VITE_ENABLE_REPORTS_PAGE=true

# ============================================
# Export Features
# ============================================
# Enable CSV export functionality
VITE_ENABLE_CSV_EXPORT=true

# Enable PNG export functionality (requires html2canvas)
VITE_ENABLE_PNG_EXPORT=true

# ============================================
# Client-Side Caching
# ============================================
# Enable client-side data caching (localStorage/sessionStorage)
VITE_ENABLE_CLIENT_CACHING=true

# Cache TTL for Stats page data (milliseconds)
# Default: 300000 (5 minutes)
VITE_CACHE_TTL_STATS=300000

# Cache TTL for Reports page data (milliseconds)
# Default: 86400000 (24 hours)
VITE_CACHE_TTL_REPORTS=86400000

# ============================================
# Mobile Optimization
# ============================================
# Enable mobile-optimized chart rendering
VITE_ENABLE_MOBILE_CHARTS=true

# Mobile breakpoint (pixels) - screens below this are considered mobile
# Default: 768
VITE_MOBILE_BREAKPOINT=768

# Maximum data points to show on mobile devices
# Default: 10
VITE_MOBILE_MAX_DATA_POINTS=10

# ============================================
# Performance & UX
# ============================================
# Enable loading skeletons for charts
VITE_ENABLE_CHART_SKELETONS=true

# Enable error boundaries for chart components
VITE_ENABLE_ERROR_BOUNDARIES=true

# ============================================
# Advanced Analytics
# ============================================
# Enable derived metrics (Performance, Efficiency, Stability, Risk scores)
VITE_ENABLE_DERIVED_METRICS=true

# Enable risk analysis section in Reports
VITE_ENABLE_RISK_ANALYSIS=true

# ============================================
# Chart Types
# ============================================
# Enable heatmap visualizations
VITE_ENABLE_HEATMAPS=true

# Enable treemap visualizations
VITE_ENABLE_TREEMAPS=true

# Enable box plot visualizations
VITE_ENABLE_BOXPLOTS=true

# Enable scatter plot visualizations
VITE_ENABLE_SCATTER=true

# ============================================
# PRESET CONFIGURATIONS
# ============================================
# Uncomment ONE preset below to use predefined configurations
# Or keep all commented to use individual flags above

# --- Single Cafe Preset ---
# Optimized for single-location cafes with real-time focus
# VITE_SINGLE_BRANCH_MODE=true
# VITE_CACHE_TTL_STATS=120000
# VITE_ENABLE_MOBILE_CHARTS=true

# --- Enterprise Preset ---
# Optimized for multi-branch chains with longer cache times
# VITE_SINGLE_BRANCH_MODE=false
# VITE_CACHE_TTL_STATS=600000
# VITE_CACHE_TTL_REPORTS=86400000
# VITE_REAL_TIME_THROTTLE_MS=10000

# --- Performance Preset ---
# Maximum performance for large datasets
# VITE_ENABLE_CLIENT_CACHING=true
# VITE_MOBILE_MAX_DATA_POINTS=8
# VITE_REAL_TIME_THROTTLE_MS=10000

# --- Minimal Preset ---
# Basic features only, for demos or resource-constrained environments
# VITE_ENABLE_CSV_EXPORT=false
# VITE_ENABLE_PNG_EXPORT=false
# VITE_ENABLE_HEATMAPS=false
# VITE_ENABLE_TREEMAPS=false
# VITE_ENABLE_BOXPLOTS=false
